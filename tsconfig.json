{
	"compilerOptions": {
		"target": "ESNext",
		"module": "commonjs",
		"allowJs": true,
		"skipLibCheck": true,
		"esModuleInterop": true,
		"noImplicitAny": true,
		"sourceMap": true,
		"baseUrl": ".",
		"outDir": "dist",
		"moduleResolution": "node",
		"resolveJsonModule": true,

		"allowImportingTsExtensions": true,
		"noEmit": true,
	},
	"include": [
		"forge.config.cts",
		"electronForgeVitePlugin.cts",
	],
}