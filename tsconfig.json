{
	"compilerOptions": {
		"target": "ESNext",
		"module": "commonjs",
		"allowJs": true,
		"skipLibCheck": true,
		"esModuleInterop": true,
		"noImplicitAny": true,
		"sourceMap": true,
		"baseUrl": ".",
		"outDir": "dist",
		"moduleResolution": "node",
		"resolveJsonModule": true,
		"paths": {
			"$lib": ["src/lib"],
			"$lib/*": ["src/lib/*"],
			"$root/*": ["src/*"],
			"$panes/*": ["src/lib/components/layout/panes/*"]
		},
		"composite": true
	},
	"include": [
		"forge.config.cts",
		"electronForgeVitePlugin.cts",
		"electron/**/*.ts",
		"electron/**/*.js"
	],
	"references": [
		{ "path": "./src/tsconfig.json" },
		{ "path": "./vite/tsconfig.json" }
	]
}