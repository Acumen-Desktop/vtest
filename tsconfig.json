{
	"compilerOptions": {
		"target": "ESNext",
		"module": "commonjs",
		"allowJs": true,
		"skipLibCheck": true,
		"esModuleInterop": true,
		"noImplicitAny": true,
		"sourceMap": true,
		"baseUrl": ".",
		"outDir": "dist",
		"moduleResolution": "node",
		"resolveJsonModule": true,
		"paths": {
			"$lib": ["src/lib"],
			"$lib/*": ["src/lib/*"],
			"$root/*": ["src/*"]
		},
		"allowImportingTsExtensions": true,
		"noEmit": true
	},
	"include": [
		"forge.config.cts",
		"electronForgeVitePlugin.cts",
	]
}