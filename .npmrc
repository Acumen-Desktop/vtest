engine-strict=true
package-lock=true
save-exact=true
auto-install-peers=true
node-linker=hoisted

# Prevent using other package managers
prefer-npm=true
ignore-pnpm=true
ignore-yarn=true

# Performance & security
audit=true
fund=false
update-notifier=true

# Electron specific
runtime=electron
target=33.2.0
disturl=https://electronjs.org/headers
